#!/usr/bin/env bash
# 0-change_your_home_IP
# Script to change localhost and facebook.com resolution

# Make a backup of /etc/hosts
cp /etc/hosts /etc/hosts.bak

# Remove any previous entries for localhost or facebook.com added by this script
sed -i '/localhost/d' /etc/hosts
sed -i '/facebook.com/d' /etc/hosts

# Add new entries at the end of /etc/hosts
echo "127.0.0.2   localhost" >> /etc/hosts
echo "8.8.8.8     facebook.com" >> /etc/hosts
