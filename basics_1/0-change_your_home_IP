#!/usr/bin/env bash
# 0-change_your_home_IP
# Script to change localhost and facebook.com resolution safely

# 1. Backup the original hosts file
sudo cp /etc/hosts /etc/hosts.bak

# 2. Replace localhost entry
sudo awk '{if ($1=="127.0.0.1" && $2=="localhost") print "127.0.0.2 localhost"; else print $0}' /etc/hosts.bak | sudo tee /etc/hosts > /dev/null

# 3. Add facebook.com entry at the end
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null
